# ============================================
# RAG Agent IA - Environment Configuration
# ============================================
# Copiez ce fichier vers .env et configurez vos valeurs
# cp .env.example .env

# ============================================
# API Keys - Required
# ============================================

# Mistral AI API Key
# Obtenir sur: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Supabase Configuration
# Obtenir sur: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================
# API Keys - Optional
# ============================================

# Perplexity API Key (pour la recherche web)
# Obtenir sur: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# GitHub Access Token (pour l'ingestion de repos)
# Obtenir sur: https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN=

# ============================================
# Application Settings
# ============================================

# Environment: development, staging, production
APP_ENV=development

# Debug mode
APP_DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Vector Store Settings
# ============================================

# Mistral embedding model
EMBEDDING_MODEL=mistral-embed

# Embedding dimension (Mistral = 1024)
EMBEDDING_DIMENSION=1024

# Similarity threshold for search (0.0 - 1.0)
SIMILARITY_THRESHOLD=0.7

# Max results per search
MAX_RESULTS=10

# ============================================
# LLM Settings
# ============================================

# Mistral model for generation
LLM_MODEL=mistral-large-latest

# Temperature (creativity): 0.0 - 2.0
LLM_TEMPERATURE=0.7

# Max output tokens
LLM_MAX_TOKENS=4096

# ============================================
# API Server Settings
# ============================================

# Host and port
API_HOST=0.0.0.0
API_PORT=8000

# Auto-reload in development
API_RELOAD=true

# ============================================
# API Authentication
# ============================================

# Require API key for protected endpoints
API_KEY_REQUIRED=true

# Master key for creating initial API keys
# Generate with: python -c "import secrets; print('master_' + secrets.token_hex(32))"
API_MASTER_KEY=master_your_secure_master_key_here

# Enable rate limiting per API key
RATE_LIMIT_ENABLED=true

# Default rate limit (requests per minute)
RATE_LIMIT_REQUESTS=100
